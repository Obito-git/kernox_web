---
import { type CollectionEntry } from "astro:content";
import ArrowCard from "@components/os/ArrowCard.astro";
import { mapToCardEntry } from "@content/config";
import type { ContentCollection } from "@const/global";

interface PostsListProps {
    posts: CollectionEntry<ContentCollection.OS>[];
}

const { posts } = Astro.props as PostsListProps;
---

<ul class="flex flex-col gap-4 mt-2">
    {
        posts.map((post) => (
            <li>
                <ArrowCard entry={mapToCardEntry(post)} />
            </li>
        ))
    }
</ul>
