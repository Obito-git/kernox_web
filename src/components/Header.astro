---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE, PAGE_METADATA } from "@const/global";
---

<header>
    <Container>
        <div class="flex flex-wrap gap-y-2 justify-between">
            <Link href={PAGE_METADATA.home.url} underline={false}>
                <div class="font-semibold">
                    {SITE.name} - {SITE.slug}
                </div>
            </Link>
            <nav class="flex gap-1">
                <Link href={PAGE_METADATA.leetcode.url}> leetcode </Link>
                <span>
                    {`/`}
                </span>
                <Link href={PAGE_METADATA.os.url}> OS </Link>
                <span>
                    {`/`}
                </span>
                <Link href={PAGE_METADATA.about.url}> about me </Link>
            </nav>
        </div>
    </Container>
</header>
