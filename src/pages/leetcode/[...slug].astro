---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import BackToPrev from "@components/BackToPrev.astro";
import { PAGE_METADATA } from "@const/global";

export async function getStaticPaths() {
  const posts = (await getCollection("leetcode")).filter(
    (post) => !post.data.draft,
  );
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"leetcode">;

const post = Astro.props;
const { Content } = await post.render();
---

<PageLayout title={post.data.title} description={post.data.title}>
  <Container>
    <div class="animate">
      <BackToPrev href={PAGE_METADATA.leetcode.url}>
        Back to problems
      </BackToPrev>
    </div>
    <Content />
  </Container>
</PageLayout>
